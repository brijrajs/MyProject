  "themeAttributeLayout": [
    {
      "sectionName": "Theme Settings",
      "openByDefault": true,
      "instructions": "General theme settings.",
      "attributes": [
        {
          "name":       "Secondary Header Promo Content",
          "tooltip":    "This text will show up above the header. Fewer the 70 characters (including spaces) is recommended."
        },
        {
          "name":       "Information Only Theme",
          "tooltip":    "Remove all buy and checkout buttons from item pages. Users will be able to view and browse items but will not be able to purchase items through the StoreFront."
        },
        {
          "name":       "Google Autocomplete",
          "tooltip":    "Address fields will autocomplete using Googles API."
        },
        {
          "name":       "Use PNG Thumbnails",
          "tooltip":    "Use PNG thumbnails instead of the default JPEG thumbnails. This will improve image quality. However, it may also, slightly, increase load time."
        },
        {
          "name":       "Hide Out of Stock Banner",
          "tooltip":    "Hide the default out of stock banner overlay on items that are out of stock."
        },
        {
          "name":       "Hide Sale Banner",
          "tooltip":    "Hide the default sale banner overlay on items that are on sale."
        },
        {
          "name":       "Item No Image Available Image URL",
          "tooltip":    "Input an image that will display if there is no image available for items within your UltraCart account."
        },
        {
          "name":       "Item Show Options",
          "tooltip":    "Show item options on the item page. If this box is not checked item options will display during the checkout process."
        },
        {
          "name":       "Checkout Only Theme",
          "tooltip":    "Check this box if you are ONLY using the UltraCart system to manage your checkout process."
        },
        {
          "name":       "Checkout Only Theme Logo URL",
          "tooltip":    "If you are only using the checkout portion of the UltraCart system you can specify a URL for your logo here."
        }
        ]
    },
